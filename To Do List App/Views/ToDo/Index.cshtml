@model List<To_Do_List_App.Models.ToDoItem>

<h2>@ViewBag.AppName</h2>

<a asp-action="AddTask" class="btn btn-warning mb-3">Add New Task</a>

<ul class="list-group">
    @foreach (var task in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @task.Task - @task.IsComplete
            @if (!task.IsComplete)
            {
                <a asp-action="MarkComplete" asp-route-id="@task.Id" class="btn btn-sm btn-secondary">Mark Complete</a>
            }
        </li>
    }
</ul>

